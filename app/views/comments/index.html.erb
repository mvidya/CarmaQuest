<h1>Comments</h1>

<ul id="comments">
  <% @comments.each do |comment| %>
    <li><%= comment.comment_user %></li>
  <% end %>
</ul>

<h2>New Comment</h2>
<%= form_for [@commentable, Comment.new] do |form| %>
  <table>
    <tr>
      <tr><%= form.label :comment_user %></tr>
      <td><%= form.text_area :comment_user %></td>
    </tr>
    <tr>
      <td><%= submit_tag "Add comment" %></td>
    </tr>
  </table>
<% end %>