<div class="header">
  <div class-"col-xs-12 col-sm-12">
    <div class="container">
      <div class="col-xs-6 col-sm-3 p-l-0">
        <div class="logo-holder">
          <a href="<%= root_path %>">
            <img src="/assets/logo.png" alt="logo">
          </a>
        </div>
      </div>
      <div class="col-xs-6 col-sm-9 right-holder p-r-0">
        <div class="col-xs-12 col-sm-8">
          <div class="input-group">
          <%= form_tag questions_path, :method => :get do %>
              <%= text_field_tag :q, nil, :placeholder => "Search for..." %>
            <span class="input-group-btn">
              <%= submit_tag "Go!", :class =>"btn btn-default", :name => nil %>
             </span> 
             <% end %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 welcome-holder text-right">
          <div class="welcome-text">Hey, <span><a href="#"><%= current_user.name %></a> <%= link_to "", destroy_user_session_path, method: :delete, class: "logout glyphicon glyphicon-off"  %></span></div>
        </div>
      </div>
    </div>
  </div>
</div>