<div id="answer" >
<% if !@answers.empty?%>
	<% @answers.each do |ans| %>
	  <%= raw(ans.description) %> 
	  <%= link_to 'Comment', answer_comments_path(ans.id) %><br />
	<% end %>
<%end%>
<h1>Your Answer</h1>
	<%= form_for @answer, :url => { :action => "answer_create", :controller => "questions"}, remote: true do |answer| %>
		<table>
			<tr>
				<td>Description:</td>
				<td><%= answer.text_area :description, :class => "tinymce", :rows => 5, :cols => 120 %></td>
				<%= tinymce %>
			</tr>
			<tr>
				<td><%= answer.hidden_field :user_id, value: current_user.id %></td>
				<td><%= answer.hidden_field :question_id, value: @question.id %></td>
			</tr>
		</table>
	<%= answer.submit %>
	<% end %>
</div>
