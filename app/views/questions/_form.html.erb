<%= form_for @question do |f| %>
	<table>
		<tr>
			<td>Title:</td>
			<td><%= f.text_field :title %></td>
		</tr>

		<tr>
			<td>Description:</td>
			<td><%= f.text_area :description %></td>
		</tr>

		<tr>
			<td>Team:</td>
			<td><%= f.collection_select :team_id, Team.all, :id, :name, :prompt => "Select a Team" %></td>
		</tr>

		<tr>
			<td><%= f.submit "Submit"%></td>
		</tr>
	</table>
<% end %>