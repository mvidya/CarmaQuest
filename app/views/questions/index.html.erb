<h1>Questions</h1>
<table>
	<tr>
		<td>Title</td>
		<td>Description</td>
		<td>Team</td>
		<td>Actions</td>
	</tr>
	<% @questions.each do |question| %>
		<tr>
		  <td><%= link_to question.title, question %></td>
		  <td><%= question.description %></td>
		  <td><%= question.team.name %></td>
		  <td><%= link_to "Edit", edit_question_path(question.id) %>
		      <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>